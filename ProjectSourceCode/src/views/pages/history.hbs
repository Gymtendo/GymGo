<div class="container mt-4">
    <h2 class="mb-4 text-center">Your Exercise History</h2>

    <!-- Add Exercise Form -->
    <form action="/history" method="POST" class="mb-5">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="exerciseName" class="form-label">Exercise Name</label>
                <input type="text" class="form-control" id="exerciseName" name="exerciseName" required>
            </div>
            <div class="col-md-4">
                <label for="exerciseXP" class="form-label">XP</label>
                <input type="number" class="form-control" id="exerciseXP" name="exerciseXP" required>
            </div>
            <div class="col-md-2">
                <label for="timeQuant" class="form-label">Time Based?</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="timeQuant" name="timeQuant">
                    <label class="form-check-label" for="timeQuant">Yes</label>
                </div>
            </div>
            <div class="col-md-2">
                <label for="amount" class="form-label">Amount</label>
                <input type="number" class="form-control" id="amount" name="amount" required>
            </div>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Add Exercise</button>
        </div>
    </form>

    <!-- Table of exercises -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Exercise</th>
                    <th>XP</th>
                    <th>Time-Based</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {{#if exercises.length}}
                {{#each exercises}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.exercisename}}</td>
                    <td>{{this.exercisexp}}</td>
                    <td>{{#if this.timequant}}Yes{{else}}No{{/if}}</td>
                    <td>{{this.amount}}</td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">No exercises logged yet.</td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>