<div class="container mt-5">
  <h1 class="mb-4">Friends</h1>
  <div class="container">
    <form action="/friends/add" method="POST">
      <input type="text" name="username" placeholder="add friend..."></input>
      <input type="submit" value="Add!"></input>
    </form>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">XP</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#if users.pendingOut.length}}
        <tr>
          <td colspan="3" class="text-center">Outgoing Requests</td>
        </tr>
        {{#each users.pendingOut}}
          <tr>
            <td>{{username}}</td>
            <td>{{xp}}</td>
            <td>
              <form action="/friends/cancel" method="POST">
                <input type="hidden" name="id" value="{{accountid}}"></input>
                <input type="hidden" name="username" value="{{username}}"></input>
                <input type="submit" value="Cancel"></input>
              </form>
            </td>
          </tr>
        {{/each}}
      {{/if}}
      {{#if users.pendingIn.length}}
        <tr>
          <td colspan="3" class="text-center">Incoming Requests</td>
        </tr>
        {{#each users.pendingIn}}
          <tr>
            <td>{{username}}</td>
            <td>{{xp}}</td>
            <td>
              <form action="/friends/accept" method="POST">
                <input type="hidden" name="id" value="{{accountid}}"></input>
                <input type="hidden" name="username" value="{{username}}"></input>
                <input type="submit" value="Accept"></input>
              </form>
            </td>
          </tr>
        {{/each}}
      {{/if}}
      <tr>
        <td colspan="3" class="text-center">Friends</td>
      </tr>
      {{#each users.accepted}}
        <tr>
          <td>{{username}}</td>
          <td>{{xp}}</td>
          <td>
            <form action="/friends/remove" method="POST">
              <input type="hidden" name="id" value="{{accountid}}"></input>
              <input type="hidden" name="username" value="{{username}}"></input>
              <input type="submit" value="Remove"></input>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
